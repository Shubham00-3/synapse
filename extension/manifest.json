{
  "manifest_version": 3,
  "name": "Synapse - Save to Your Second Brain",
  "version": "1.0.0",
  "description": "Instantly save articles, images, and content to your personal Synapse knowledge base",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3002/*",
    "https://*/"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

